<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/server_label"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/server_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/textView"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/port_label"
        app:layout_constraintTop_toBottomOf="@id/server_ip"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/server_port"
        android:layout_width="134dp"
        android:layout_height="38dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:inputType="phone"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/textView2"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="158dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/size_label"
        app:layout_constraintTop_toBottomOf="@id/server_port"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/video_size"
        android:layout_width="132dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="phone"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/textView4"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quality_label"
        tools:layout_editor_absoluteX="14dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/video_size" />

    <EditText
        android:id="@+id/video_quality"
        android:layout_width="132dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="phone"
        android:text=""
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="@string/button_label"
        android:onClick="startStreaming"
        app:layout_constraintTop_toBottomOf="@id/video_quality"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>